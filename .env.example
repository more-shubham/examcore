# =============================================================================
# ExamCore Production Environment Configuration
# =============================================================================
# Copy this file to .env and update all values before deployment.
# NEVER commit .env to version control.
# =============================================================================

# =============================================================================
# DJANGO CORE
# =============================================================================

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-minimum-50-characters-change-this

# NEVER set to True in production
DEBUG=False

# Your domain(s), comma-separated
ALLOWED_HOSTS=examcore.example.com,www.examcore.example.com

# Full URLs with protocol (https://)
CSRF_TRUSTED_ORIGINS=https://examcore.example.com,https://www.examcore.example.com

# =============================================================================
# DATABASE
# =============================================================================

POSTGRES_DB=examcore
POSTGRES_USER=examcore
# Generate strong password: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-database-password-here

# Use 'db' when running with Docker Compose, 'localhost' for local development
DB_HOST=db
DB_PORT=5432

# Connection pool settings
DB_CONN_MAX_AGE=600

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# Required for OTP verification. Examples for common providers:
#
# SendGrid:
#   EMAIL_HOST=smtp.sendgrid.net
#   EMAIL_PORT=587
#   EMAIL_HOST_USER=apikey
#   EMAIL_HOST_PASSWORD=SG.your-api-key
#
# Mailgun:
#   EMAIL_HOST=smtp.mailgun.org
#   EMAIL_PORT=587
#   EMAIL_HOST_USER=postmaster@your-domain.mailgun.org
#   EMAIL_HOST_PASSWORD=your-mailgun-password
#
# AWS SES:
#   EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
#   EMAIL_PORT=587
#   EMAIL_HOST_USER=your-ses-smtp-username
#   EMAIL_HOST_PASSWORD=your-ses-smtp-password

EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password
DEFAULT_FROM_EMAIL=noreply@examcore.example.com
SERVER_EMAIL=server@examcore.example.com

# =============================================================================
# LOGGING
# =============================================================================

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
