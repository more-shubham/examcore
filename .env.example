# =============================================================================
# ExamCore Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit .env to version control

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Django settings module (options: config.settings.development, config.settings.production)
DJANGO_SETTINGS_MODULE=config.settings.production

# SECURITY WARNING: Generate a unique secret key for production
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this

# Debug mode (NEVER True in production)
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Comma-separated list of CSRF trusted origins (include protocol)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DATABASE
# =============================================================================

POSTGRES_DB=examcore
POSTGRES_USER=examcore
POSTGRES_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600

# =============================================================================
# EMAIL (SMTP)
# =============================================================================

EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# =============================================================================
# SECURITY
# =============================================================================

# Set to False only if behind a reverse proxy that handles SSL
SECURE_SSL_REDIRECT=True

# Admin email for error notifications
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# LOGGING
# =============================================================================

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
